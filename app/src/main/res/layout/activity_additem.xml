<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgroundgradientblue"
    android:orientation="vertical">

    <TextView
        android:id="@+id/additemtitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:gravity="center_horizontal"
        android:text="Enter Product Details"
        android:textAlignment="center"
        android:textColor="#C1F8B0B0"
        android:textSize="30dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/additemitemname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/additemtitle"
        android:layout_marginTop="18dp"
        android:text="Item Name:"
        android:textColor="#C1F8B0B0"
        android:textSize="20dp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:gravity="center_horizontal" />

    <EditText
        android:id="@+id/additemitemnamefield"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/additemitemname"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:gravity="center_horizontal"
        android:inputType="textPersonName"
        android:hint="Enter Item Name"
        android:textAlignment="center"
        android:textColor="#aaaaaa"
        android:textSize="20dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/additemitemcategory"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/additemitemnamefield"
        android:layout_marginTop="18dp"
        android:text="Item Category:"
        android:textColor="#C1F8B0B0"
        android:textSize="20dp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:gravity="center_horizontal" />

    <EditText
        android:id="@+id/additemitemcategoryfield"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/additemitemcategory"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:gravity="center_horizontal"
        android:hint="Enter Item Category"
        android:textAlignment="center"
        android:textColor="#aaaaaa"
        android:textSize="20dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/additemitemprice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/additemitemcategoryfield"
        android:layout_marginTop="18dp"
        android:text="Item Price:"
        android:textColor="#C1F8B0B0"
        android:textSize="20dp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:gravity="center_horizontal" />

    <EditText
        android:id="@+id/additemitempricefield"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/additemitemprice"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:gravity="center_horizontal"
        android:hint="Enter Item Price"
        android:textAlignment="center"
        android:textColor="#aaaaaa"
        android:textSize="20dp"
        android:textStyle="bold"
        android:inputType="numberDecimal"/>

    <TextView
        android:id="@+id/additemitemcount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/additemitempricefield"
        android:layout_marginTop="18dp"
        android:text="Item Count:"
        android:textColor="#C1F8B0B0"
        android:textSize="20dp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:gravity="center_horizontal" />

    <EditText
        android:id="@+id/additemitemcountfield"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/additemitemcount"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:gravity="center_horizontal"
        android:hint="Enter Item Count"
        android:textAlignment="center"
        android:textColor="#aaaaaa"
        android:textSize="20dp"
        android:textStyle="bold"
        android:inputType="number"/>

    <TextView
        android:id="@+id/additemitemmin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/additemitemcountfield"
        android:layout_marginTop="18dp"
        android:text="Item Min:"
        android:textColor="#C1F8B0B0"
        android:textSize="20dp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:gravity="center_horizontal" />

    <EditText
        android:id="@+id/additemitemminfield"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/additemitemmin"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:gravity="center_horizontal"
        android:hint="Enter Item Min"
        android:textAlignment="center"
        android:textColor="#aaaaaa"
        android:textSize="20dp"
        android:textStyle="bold"
        android:inputType="number"/>

    <Button
        android:id="@+id/additemadditembutton"
        android:layout_width="263dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/additemitemminfield"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="80dp"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="10dp"
        android:text="Add New Item" />

    <Button
        android:id="@+id/additemcancelbutton"
        android:layout_width="263dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/additemadditembutton"
        android:layout_marginStart="80dp"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="10dp"
        android:text="Cancel" />

</RelativeLayout>